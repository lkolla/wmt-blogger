<!doctype html>
<html>
<head>
    <title>Walmart - Blogger, Profile</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-user"></span> Page </h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <a href="/createblog" class="btn btn-default btn-sm">Create Blog</a>
        <a href="/blogpost" class="btn btn-default btn-sm">Post</a>
    </div>

    <% if (typeof message !== 'undefined' && message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="well">
            <h3><span class="fa fa-laptop"></span> Hi.. <%= user.firstname %> <%= user.lastname %></h3>
                <p>
                    <strong>user name</strong> <%= user.username %><br>
                    <strong>password</strong> <%= user.password %><br>
                    <strong>email</strong> <%= user.email %><br>
                                   
                </p>
                
        </div>

        <div class="well">
            <h3><span class="fa fa-laptop"></span> My Blog Posts</h3>
                <ul class="list-inline">
                <li><strong>title</strong> not implemented<br></li>
                <li><strong>content</strong> not implemented<br></li>
                <li><strong>image</strong> not implemented<br></li>
                </ul>                  
                
                
        </div>

</div>
</body>
</html>
